# ====================
# SERVER CONFIGURATION
# ====================

# Environment
NODE_ENV=production

# Server
PORT=5000
CLIENT_URL=https://your-domain.com

# Database
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_secure_password
DB_NAME=helpus_pro
DB_PORT=3306

# Security
JWT_SECRET=your_64_char_super_secure_jwt_secret_key_here
JWT_EXPIRE=30d
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Default Settings
DEFAULT_BEP20=0x2269ce1f94e6e2ab5ac933adae12e37ceba2a5cf

# ====================
# CLIENT CONFIGURATION
# ====================

REACT_APP_API_URL=https://your-domain.com/api
REACT_APP_APP_NAME=HelpUs Investment
REACT_APP_DEFAULT_BEP20=0x2269ce1f94e6e2ab5ac933adae12e37ceba2a5cf

# ====================
# DEPLOYMENT SETTINGS
# ====================

# Docker
DOCKER_REGISTRY=your-registry
DOCKER_IMAGE_TAG=latest

# SSL (for production)
SSL_EMAIL=admin@your-domain.com
SSL_DOMAIN=your-domain.com